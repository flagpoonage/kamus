{
  "scripts": {
    "dev:copy": "cp -R ./static/* ./dist-dev",
    "dev:popup": "esbuild ./src/popup/index.ts --watch --bundle --sourcemap=inline --outfile=./dist-dev/popup.js",
    "dev:popup-style": "postcss ./src/popup/style/index.css -o ./dist-dev/popup-style.css -w --verbose -u postcss-nested -u postcss-import",
    "dev:content": "esbuild ./src/content/index.ts --watch --bundle --sourcemap=inline --outfile=./dist-dev/content.js",
    "dev:background": "esbuild ./src/background/index.ts --watch --bundle --sourcemap=inline --outfile=./dist-dev/background.js",
    "dev": "npm run dev:copy && concurrently -c red,green,blue,yellow -n \"popup\",\"background\",\"content\",\"popup-style\" \"npm run dev:popup\" \"npm run dev:content\" \"npm run dev:background\" \"npm run dev:popup-style\"",
    "build:copy": "cp -R ./static/* ./dist-prod",
    "build:popup": "esbuild ./src/popup/index.ts --minify --bundle  --outfile=./dist-prod/popup.js",
    "build:popup-style": "postcss ./src/popup/style/index.css --verbose -u postcss-nested -u postcss-import | esbuild --loader=css --minify | cat > ./dist-prod/popup-style.css",
    "build:content": "esbuild ./src/content/index.ts --minify --bundle  --outfile=./dist-prod/content.js",
    "build:background": "esbuild ./src/background/index.ts --minify --bundle  --outfile=./dist-prod/background.js",
    "build": "npm run build:copy && npm run build:popup && npm run build:popup-style && npm run build:content && npm run build:background"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.236",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "concurrently": "^8.0.1",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.4"
  }
}
