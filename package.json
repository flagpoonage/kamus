{
  "scripts": {
    "copy": "cp -R ./static/* ./dist",
    "dev:popup": "esbuild ./src/popup/index.ts --watch --bundle --sourcemap=inline --outfile=./dist/popup.js",
    "dev:popup-style": "postcss ./src/popup/style/index.css -o ./dist/popup-style.css -w --verbose -u postcss-nested -u postcss-import",
    "dev:content": "esbuild ./src/content/index.ts --watch --bundle --sourcemap=inline --outfile=./dist/content.js",
    "dev:background": "esbuild ./src/background/index.ts --watch --bundle --sourcemap=inline --outfile=./dist/background.js",
    "dev": "npm run copy && concurrently -c red,green,blue,yellow -n \"popup\",\"background\",\"content\",\"popup-style\" \"npm run dev:popup\" \"npm run dev:content\" \"npm run dev:background\" \"npm run dev:popup-style\""
  },
  "devDependencies": {
    "@types/chrome": "^0.0.236",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "concurrently": "^8.0.1",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.4"
  }
}
